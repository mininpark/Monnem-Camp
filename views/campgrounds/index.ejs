  <% layout('/layouts/boilerplate') %>
  <h1>All Campgrounds</h1>
  <div>
    <a href="/campgrounds/new">Add a new Campground</a>
  </div>
    <% for (let campground of campgrounds) {%>
      <div class="card" mb-3>
        <div class="row">
          <div class="col-lg-4">
            <img class="img-thumbnail" alt="" src="<%= campground.image %>">
          </div>
          <div class="col-lg-4">
            <div class="card-body">
              <h5 class="cart-title"><%=campground.title%></h5>
              <p class="cart-text"><%=campground.description%></p>
              <p class="card-text">
                <small class="text-muted"><%=campground.location%></small>
              </p>
              <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
            </div>
          </div>
        </div>
      </div>
    <% }%>
