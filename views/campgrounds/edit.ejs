  <% layout('/layouts/boilerplate') %>
    <div class="row justfiy-content-md-center">
      <h1 class="text-center">Edit Campground</h1>
      <div class="col-6">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <!--group content campground[title]-->
            <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>">
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location%>">
          </div>
          <div class="mb-3">
            <label for="price" class="form-label">Campground Price</label>
            <div class="input-group mb-3">
              <span class="input-group-addon" id="basic-addon1">â‚¬</span>
              <input type="text" class="form-control" name="campground[price] id="price" value="<%=campground.price%>" placeholder="0.00" aria-label="price" aria-describedby="basic-addon1">
            </div>
          </div>
    
          <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input class="form-control" type="text" id="image" value="<%=campground.image%>" name="campground[image]">
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="campground[description]"><%=campground.description%> </textarea>
          </div>
          <div>
            <button class="btn btn-secondary">Update Campground</button>
          </div>
        </form>
        <a href="/campgrounds/<%=campground._id%>">Back To Campgrounds</a>
      </div>
    </div>
    