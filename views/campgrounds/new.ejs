<% layout('/layouts/boilerplate') %>
<div class="row justfiy-content-md-center">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <!--group content campground[title]-->
        <input class="form-control" type="text" id="title" name="campground[title]" required>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]" required>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">â‚¬</span>
          <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.00" aria-label="price" aria-describedby="basic-addon1" required>
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input class="form-control" type="text" id="image" name="campground[image]" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="campground[description]" required></textarea>
      </div>
      <div>
        <button type="submit" class="btn btn-secondary">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
